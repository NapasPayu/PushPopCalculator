<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:digits="10"
        android:inputType="number"
        android:text="0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum" />

    <TextView
        android:id="@+id/seven"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:gravity="top|end"
        android:text="7"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_num" />

    <TextView
        android:id="@+id/eight"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="8"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/seven"
        app:layout_constraintStart_toEndOf="@+id/seven" />

    <TextView
        android:id="@+id/nine"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="9"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/seven"
        app:layout_constraintStart_toEndOf="@+id/eight" />

    <TextView
        android:id="@+id/four"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <TextView
        android:id="@+id/five"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="5"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <TextView
        android:id="@+id/six"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="6"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/seven" />

    <TextView
        android:id="@+id/three"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="3"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <TextView
        android:id="@+id/two"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="2"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <TextView
        android:id="@+id/one"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="1"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toBottomOf="@+id/four" />

    <TextView
        android:id="@+id/zero"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <TextView
        android:id="@+id/dot"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="top|end"
        android:text="."
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <TextView
        android:id="@+id/pop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top|end"
        android:text="pop"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintTop_toTopOf="@id/seven" />

    <TextView
        android:id="@+id/push"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="top|end"
        android:text="push"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintTop_toBottomOf="@+id/pop" />
</androidx.constraintlayout.widget.ConstraintLayout>